{
  "name": "@joemccann/xai-mcp-server",
  "version": "1.0.4",
  "description": "MCP server for xAI Grok APIs - image generation, chat, vision, search, and video",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xai-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "xai",
    "grok",
    "ai",
    "image-generation",
    "video-generation",
    "vision",
    "search",
    "claude",
    "model-context-protocol",
    "anthropic"
  ],
  "author": "Joe McCann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joemccann/xai-mcp-server.git"
  },
  "homepage": "https://github.com/joemccann/xai-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/joemccann/xai-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
